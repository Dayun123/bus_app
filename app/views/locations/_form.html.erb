<%= form_for @location do |form| %>
  <% if location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% location.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group field">
    <%= form.label :street_address %>
    <%= form.text_field :street_address, id: :location_street_address, class: 'form-control' %>
  </div>

  <div class="form-group field">
    <%= form.label :city %>
    <%#= form.text_field :city, id: :location_city, class: 'form-control' %>
    <%= form.collection_select :city, Location::MARTA_CITIES, :to_s, :to_s, {}, {class: 'form-control'} %>
  </div>

  <div class="form-group field">
    <%= form.label :acceptable_bus_distance, "Acceptable Bus Distance (In Miles)" %>
    <%= form.number_field :acceptable_bus_distance, class: 'form-control', step: 0.1 %>
  </div>


  <div class="form-group actions">
    <%= form.submit 'Find My Busses', class: 'btn btn-success' %>
  </div>
<% end %>
